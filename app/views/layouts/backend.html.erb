<!DOCTYPE html>
<html>
<head>
    <title>Themis</title>
    <%= stylesheet_link_tag    'backend', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'backend', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body>

<header class="navbar navbar-inverse navbar-fixed-top" role="banner">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                <span class="sr-only">Themis</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to 'Themis', '#', class: 'navbar-brand' %>
        </div>
        <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
            <ul class="nav navbar-nav">
                <li><%= link_to 'Timesheets', timesheets_path %></li>
                <li><%= link_to 'Todos', tasks_path %></li>
                <li><%= link_to 'WebFS', blobs_path %></li>
            </ul>
        </nav>
    </div>
</header>

<div class="container">
    <%= yield %>
</div>


<!-- Modal -->
<div class="modal fade" id="previewModal" tabindex="-1" role="dialog" aria-labelledby="previewLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="previewLabel">Modal title</h4>
            </div>
            <div class="modal-body" style="padding: 0;">
                <iframe style="height:100%;width:100%;min-height:500px;margin:0;padding:0;border:none;"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-xs open-file" data-dismiss="modal">Open</button>
                <button type="button" class="btn btn-default btn-xs" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

</body>
</html>